<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Allows us to override platform level specific attributes in their
         respective values-vXX folder. -->
    <style name="Platform.Theme.Qwit" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/black30</item>
    </style>

    <!-- light theme -->
    <style name="Theme.Qwit" parent="Platform.Theme.Qwit" />

    <style name="Theme.Qwit.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_qwit_logo</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.Qwit</item>
    </style>
</resources>