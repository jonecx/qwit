<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qwit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimaryVariant">@color/extra_extra_light_gray</item>
        <item name="background">@color/extra_extra_light_gray</item>
        <item name="navigation_bar_background">@color/extra_extra_light_gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:background">?attr/background</item>
        <item name="android:navigationBarColor">?attr/navigation_bar_background</item>
        <item name="android:windowLightNavigationBar">true</item>

    </style>


    <style name="Theme.Qwit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Qwit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Qwit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>